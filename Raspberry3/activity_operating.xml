<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.a20170208.tranvanhay.respberry3.StartUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/backgroundTitle"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_wifi_black_24dp"
            android:id="@+id/imgIntro1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="SMART HOME DASHBOARD"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/textColor"
            android:gravity="center"
            android:id="@+id/txtViewIntro" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_important_devices_black_24dp"
            android:id="@+id/imgIntro2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:id="@+id/txtTime"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/icon"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/smallTextColor"
            android:gravity="center"
            android:id="@+id/txtNameSensor"
            android:text="LOCATION 1: "/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:text="@string/sensor0"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:id="@+id/txtSensor0"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:text="@string/sensor1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:id="@+id/txtSensor1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:text="@string/sensor2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:id="@+id/txtSensor2"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:text="@string/sensor3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:id="@+id/txtSensor3"/>
             </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:text="@string/sensor4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normaltextSize"
                    android:textColor="@color/smallTextColor"
                    android:id="@+id/txtSensor4"/>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/btnTest"
            android:text="Click me"
            android:gravity="center"
            android:textSize="@dimen/normaltextSize"
            android:textColor="@color/icon"
            android:background="@color/textColor"/>
    </LinearLayout>

</LinearLayout>